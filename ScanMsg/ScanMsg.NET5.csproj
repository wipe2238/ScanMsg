<Project>

  <PropertyGroup>
    <Version>0.6</Version>
    <Company>Rotators</Company>
    <Copyright>Copyright Â© 2018-2021  Rotators</Copyright>
    <Description>Fallout .msg files scanner</Description>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <BaseOutputPath>Build\.NET5</BaseOutputPath>
    <BaseIntermediateOutputPath>Build\.NET5</BaseIntermediateOutputPath>
  </PropertyGroup>

  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />

  <PropertyGroup>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

  <ItemGroup>
    <Compile Remove="Build\**" />
    <Compile Remove="Properties\**" />
    <EmbeddedResource Remove="Build\**" />
    <EmbeddedResource Remove="Properties\**" />
    <None Remove="Build\**" />
    <None Remove="Properties\**" />
  </ItemGroup>

</Project>
